<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <h2>
      <% if current_user != @user %>
      <%= @user.nickname %>のフォロワー
      <% else %>
      あなたのフォロワー
      <% end %>
    </h2>
    <table class='table'>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="5"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :image, :fill,50,50, format: 'jpeg', class: "profile-thumb", fallback: "no_image.jpg", size:'50x50' %></td>
          <td><%= user.nickname %></td>
          <td>フォロー数：<%= user.following.count %></td>
          <td>フォロワー数：<%= user.followers.count %></td>
          <td>投稿したレシピ数：<%= user.recipes.count %>人</td>
          <td>
            <% if current_user != user %>
              <%= render "follow_form" %>
            <% end %>
          </td>
          <td><%= link_to '詳細へ', user_path(user),class: "btn btn-primary btn-sm" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to '戻る', 'javascript:history.back()',class: "btn btn-primary btn-sm" %>
  </div>
</div>