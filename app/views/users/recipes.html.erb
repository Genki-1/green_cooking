<div class="row">
  <div class="col-xs-12 recipes_index">
    <h2><%= @user.nickname %>の投稿レシピ</h2>
    <p>全<strong><%= @recipes.count %></strong>件</p>
    <div class="recipe_index">
  <% if recipes.present? %>
    <% recipes.each do |recipe| %>
      <div class="recipe_div">
        <%= link_to recipe_path(recipe) do %>
          <%= attachment_image_tag recipe, :main_image, :fill, 180, 120,format: "jpeg" , fallback: "no_image.jpg", size: "180x120" %><br>
          <%= recipe.title %>     <% end %>
        
      </div>
    <% end %>
    <%= paginate recipes, class: "paginate" %>
  <% else %>
    <div class="recipe_no_message" align="center">投稿レシピはありません</div>
  <% end %>
</div>
  </div>
</div>