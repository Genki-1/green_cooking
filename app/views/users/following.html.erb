<div class="row">
  <div class="col-xs-10 col-xs-offset-1 relationships_index">
    <h2>
      <% if current_user != @user %>
      <%= @user.nickname %>のフォローしているユーザー
      <% else %>
      あなたのフォローしているユーザー
      <% end %>
    </h2>
    <table class='table'>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="5"></th>
        </tr>
      </thead>
      <tbody>
        <% @page_users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill,50,50, format: 'jpeg', class: "profile-thumb", fallback: "no_image.jpg" %></td>
          <td><%= user.nickname %></td>
          <td>フォロー数：<%= user.following.count %></td>
          <td>フォロワー数：<%= user.followers.count %></td>
          <td>投稿したレシピ数：<%= user.recipes.count %>人</td>
          <td><%= link_to '詳細へ', user_path(user),class: "btn btn-primary btn-sm" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @page_users %><br>
    <%= link_to '戻る', 'javascript:history.back()',class: "btn btn-primary btn-sm back_btn" %>
  </div>
</div>