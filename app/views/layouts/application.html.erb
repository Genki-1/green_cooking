<!DOCTYPE html>
<html>
  <head>
    <title>GreenCooking</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <% if signed_in? %>

      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span>green_cooking</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">

            <li><%= link_to 'トップ', root_path %></li>

            <li><%= link_to 'マイページ', user_path(current_user) %></li>

            <li><%= link_to 'レシピ投稿', new_recipe_path %></li>

            <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete%></li>
          </ul>
        </nav>
      </div>

      <% else %>

      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span>green_cooking</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'Top', root_path %></li>
            <li><%= link_to 'About', homes_about_path %></li>
            <li><%= link_to '会員登録',new_user_registration_path %></li>
            <li><%= link_to 'ログイン', new_user_session_path %></li>
          </ul>
        </nav>
      </div>

      <% end %>
    </header>

    <div class="container contents">
      <%= yield %>
    </div>
  </body>
</html>
