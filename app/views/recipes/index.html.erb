<table class="table">
<h1>aaa</h1>
  <tbody>
    <% @recipes.each do |recipe| %>
    <tr>
      <td>
        <%= link_to user_path(recipe.user) do %>
        <%= attachment_image_tag recipe.user, :main_image, :fill, 100, 100, format: 'jpg', fallback: "no_image.jpg", size:'50x50' %>
        <% end %>
      </td>
      <td><%= link_to recipe.title, recipe_path(recipe) %></td>
      <td><%= recipe.description %></td>
      <td><%= link_to recipe.user.nickname, user_path(recipe.user) %></td>

      <div id="favorites_buttons_<%= recipe.id %>">
        <%= render partial: 'favorites/favorite', locals: { recipe: recipe} %>
      </div>

      <td><%= "コメント数 : #{recipe.recipe_comments.count}" %></td>
    </tr>
    <% end %>
  </tbody>

</table>