<div class="nested-fields row">
  <div class="col-xs-4">
    <%= attachment_image_tag f.object, :image,fallback: "no_image.jpg", class: "file_preview make_image_size" %>
    <%= f.attachment_field :image, class: "btn btn-primary btn-sm achment_field image_btn image_select" %>
  </div>

  <div class="col-xs-8 make_nested">
    <%= f.label "作り方" %>
    <%= f.text_area :process, class: "recipe_input-mysize", rows:'3' %>
    <%= link_to_remove_association "消去", f, :class => 'delete-form' %>
  </div>
</div>

<script>
 let dommake = document.querySelector('.make_nested')
 let domDelete = document.querySelector('.delete-form')
if(dommake.childElementCount == 4){
  domDelete.style.display ="none";
}

</script>